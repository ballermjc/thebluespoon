<h1>Send us a note!</h1>

<div class="container">
  <%= flash[:notice] %>

  <%= form_tag("/static_pages/thank_you") do %>
    <%= f.invisible_captcha :subtitle %>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", :required => true, :pattern => "[A-Za-z-0-9]+\s[A-Za-z-'0-9]+", :title => "First and Last Name"%>
      </div>
      <div class="form-group">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true, :type => "email" %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", :required => true, :maxlength => 1000 %>
      </div>
    </div>
  </div>
  <%= submit_tag "Send" %>
  <% end %>
</div>
