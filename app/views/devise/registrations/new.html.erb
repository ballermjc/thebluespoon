<h2 class="signin-heading">Sign up</h2>

<div class="form-signin">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field email-signin">
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address", :class => "email-input" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", :class => 'password-input', placeholder: "Password" %>
      <br>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'password-input', placeholder: "Confirm Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-primary" %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
