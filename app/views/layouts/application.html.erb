<!DOCTYPE html>
<html>
  <head>
    <title>Thebluespoon</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

  </head>

  <body>

<!-- alerts/notices -->
    <% if notice %>
      <p id="notice" class="alert alert-info" role="alert"><%= notice %></p>
    <% end %>

    <% if alert %>
    <p id="alert" class="alert alert-info" role="alert"><%= alert %></p>
    <% end %>

    <nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to('The Blue Spoon', static_pages_index_path, class: "navbar-brand") %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to('About Us', static_pages_about_path) %></li>
        <li><%= link_to('Contact Us', static_pages_contact_path) %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Media <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Pictures</a></li>
            <li><a href="#">Video</a></li>
            <li><a href="#">Other Inspiration</a></li>
          </ul>
        </li>
      </ul>

      <%= form_tag("/products", method: "get", class: "navbar-form navbar-left") do %>
        <%= label_tag(:q, "Search for:", class: "sr-only") %>
        <%= text_field_tag(:q, nil, class: "form-control", placeholder: "Search our products") %>
        <%= submit_tag("Search", class: "btn btn-default") %>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Current Specials</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Learn More <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Recipes</a></li>
            <li><a href="#">Our Favorite Gadgets and Tools</a></li>
            <li><a href="#">Kitchen Tips</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Our Blog</a></li>
          </ul>
        </li>
      </ul>

      <ul class="nav navbar-nav pull-right">
        <li>
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          <% else %>
            <%= link_to('Login', new_user_session_path) %>
          <% end %>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

    <%= yield %>

    <footer>
      <div class="container">
        <h4>&copy; 2016 Michael J Cooper</h4>
      </div>
    </footer>


  </body>
</html>
