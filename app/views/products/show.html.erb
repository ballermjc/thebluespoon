<p id="notice"><%= notice %></p>


<div class="show-product">

  <h2>
    <!-- <strong>Name:</strong> -->
    <br><br>
    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
    <%= @product.name %>
    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
    <br>
  </h2>

  <h4>
    <!-- <strong>Description:</strong> -->
    <br><br>
    <em><%= @product.description %></em>
  </h4><br><br>



  <% if !@product.comments.empty? %>
    <div class="rated" data-score="<%= @product.highest_rating_comment.rating %>"></div>
    <p>"<%= @product.highest_rating_comment.body%>"</p>
  <% end %>

  <p>
    <!-- <strong>Image url:</strong> -->
    <!-- <%= @product.image_url %> -->
    <%= image_tag(@product.image_url, class: "img-responsive" ) unless @product.image_url.blank? %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(@product.price) %>
  </p>

  <%= form_tag "/payments/create" do %>
    <%= hidden_field_tag(:product_id, @product_id) %>
    <%= render "shared/stripe_checkout_button" %>
  <% end %>


<p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>

  <div class="comment-input">
    <%= render 'new_comment' %>
  </div>



    <%= render "comments" %>

  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
